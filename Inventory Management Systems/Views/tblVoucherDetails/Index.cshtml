@model IEnumerable<Inventory_Management_Systems.Models.tblVoucherDetail>

@{
    ViewBag.Title = "Index";
}

<h2>List of Vouchers Detail</h2>

<p>
    <div class="row ">
        <div class="col-10">@Html.ActionLink(" Create New", "Create", null, htmlAttributes: new { @class = "btn btn-warning fa fa-plus-circle", @style = "color:white" })</div>

    </div>
</p>
<div class="box box-primary ">
    <div class="box-header">
        List of  Vouchers Detail
    </div>
    <div class="box-body">
        <table class="table table-bordered table-striped table-condensed " id="tables">
            <thead>
                <tr style="background-color:#3c8dbc;color:white">
                    <th>
                        Voucher Code
                    </th>
                    <th>
                        Narration
                    </th>
                    <th>
                        Debit Amount
                    </th>
                    <th>
                        Credit Amount
                    </th>
                    <th>Action</th>
                </tr>
                </thead>
                @foreach (var item in Model)
                {
                <tbody>
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.TblVoucher.voucherCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Narration)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.debitAmount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.creditAmount)
                        </td>
                        <td>


                            @Html.ActionLink(" Edit", "Edit", new { id = item.voucherdetailId }, htmlAttributes: new { @class = "btn btn-default btn-sm fa fa-pencil" })
                            @Html.ActionLink(" Details", "Details", new { id = item.voucherdetailId }, htmlAttributes: new { @class = "btn btn-info btn-sm fa fa-info " })
                            @Html.ActionLink(" Delete", "Delete", new { id = item.voucherdetailId }, htmlAttributes: new { @class = "btn btn-danger btn-sm fa fa-trash " })
                        </td>
                    </tr>
                </tbody>
                    }

            </table>
    </div>
</div>

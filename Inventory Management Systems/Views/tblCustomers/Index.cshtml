@model IEnumerable<Inventory_Management_Systems.Models.tblCustomer>

@{
    ViewBag.Title = "Index";
}

<h2>List of  Customers</h2>

<p>
    <div class="row ">
        <div class="col-10">@Html.ActionLink(" Create New", "Create", null, htmlAttributes: new { @class = "btn btn-warning fa fa-plus-circle", @style = "color:white" })</div>

    </div>
</p>
<div class="box box-primary ">
    <div class="box-header">
        List of  Customers
    </div>
    <div class="box-body">
        <table class="table table-bordered table-striped table-condensed " id="tables">
            <thead>
                <tr style="background-color:#3c8dbc;color:white">
                    <th>
                        @Html.DisplayNameFor(model => model.CustomerCode)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Contact)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address)
                    </th>
                    <th></th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tbody>
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CustomerCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Contact)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td>

                            @Html.ActionLink(" Edit", "Edit", new { id = item.customerId }, htmlAttributes: new { @class = "btn btn-default btn-sm fa fa-pencil" })
                            @Html.ActionLink(" Details", "Details", new { id = item.customerId }, htmlAttributes: new { @class = "btn btn-info btn-sm fa fa-info " })
                            @Html.ActionLink(" Delete", "Delete", new { id = item.customerId }, htmlAttributes: new { @class = "btn btn-danger btn-sm fa fa-trash " })
          
                        </td>
                    </tr>
                </tbody>
            }

        </table>
    </div>
</div>
@section Scripts {




    <script>
        $(document).ready(function () {
            $('#tables').DataTable(

          );
            });

    </script>

}
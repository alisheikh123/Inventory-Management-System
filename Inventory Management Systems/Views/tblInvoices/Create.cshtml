@model Inventory_Management_Systems.Models.tblInvoice

@{
    ViewBag.Title = "Create New Invoice";
}


<div class="box box-primary direct-chat direct-chat-warning">
    <div class="box-header with-border">
        <div class="row">
            <div class="col-10">Generate Invoice</div>
            <div class="col-2"><a class="fa fa-arrow-circle-left" href="@Url.Action("Index")"> Back to List</a></div>
        </div>
    </div>
    <div class="box-body">
        <div class="container">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()


                <p>@Html.ValidationMessageFor(model => model.invoice_Code, "", new { @class = "text-danger" })</p>
                <p>@Html.ValidationMessageFor(model => model.invoice_Date, "", new { @class = "text-danger" })</p>
                <p>@Html.ValidationMessageFor(model => model.Due_Date, "", new { @class = "text-danger" })</p>
                <p>@Html.ValidationMessageFor(model => model.Invoice_type, "", new { @class = "text-danger" })</p>
                <p>@Html.ValidationMessageFor(model => model.payment_Mode, "", new { @class = "text-danger" })</p>
                <p>@Html.ValidationMessageFor(model => model.companyId, "", new { @class = "text-danger" })</p>
                <p> @Html.ValidationMessageFor(model => model.accountId, "", new { @class = "text-danger" })</p>
                <p>@Html.ValidationMessageFor(model => model.customerId, "", new { @class = "text-danger" })</p>
                <form>
                    <div class="form-row">

                        <p>  @Html.ValidationSummary(true, "", new { @class = "text-danger" })</p>


                        <div class="form-group col-md-5">
                            Invoice Code
                            @Html.EditorFor(model => model.invoice_Code, new { htmlAttributes = new { @class = "invoiceCode form-control", placeholder = "EddMMyyyXXXX", @Value = ViewBag.invoiceNo } })

                        </div>
                        <div class="form-group col-md-5">

                            Invoice Date
                            @Html.EditorFor(model => model.invoice_Date, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-5">
                            DueDate

                            @Html.EditorFor(model => model.Due_Date, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <div class="form-group col-md-5">
                            Invoice Type

                            @Html.EnumDropDownListFor(model => model.Invoice_type, htmlAttributes: new { @class = "invoicetype form-control" })

                        </div>

                    </div>
                    <div class="form-row">

                        <div class="form-group col-md-5">
                            Payment Mode

                            @Html.EnumDropDownListFor(model => model.payment_Mode, htmlAttributes: new { @class = "payment form-control" })

                        </div>
                        <div class="form-group col-md-5">
                            Company

                            @Html.DropDownList("companyId", null, "--Select Company--", htmlAttributes: new { @class = "company form-control" })


                        </div>
                    </div>


                    <div class="form-row">
                        <div class="form-group col-md-5">
                            Account

                            @Html.DropDownList("accountId", null, "--Select Account--", htmlAttributes: new { @class = "account form-control" })
                           
                        </div>

                        <div class="form-group col-md-5">
                            Customer

                            @Html.DropDownList("customerId", null, "--Select Customer--", htmlAttributes: new { @class = "customer form-control" })
                     

                        </div>
                    </div>





                    <div class="form-group">
                        <div class="col-2">
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <button type="submit" class="btn btn-success btn-xs"><i class="fa fa-save" aria-hidden="true"> Save</i></button>
                                </div>
                            </div>
                        </div>
                    </div>


                </form>
            }

        </div>
        </div>
    </div>




    @section Scripts {


        <script type="text/javascript">
            $(function () {
                $('.invoicetype').select2();
                $('.account').select2();
                $('.company').select2();
                $('.payment').select2();
                $('.customer').select2();

            });


        </script>

    }
